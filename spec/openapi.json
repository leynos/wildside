{
  "openapi": "3.0.3",
  "info": {
    "title": "myapp",
    "version": "0.1.0"
  },
  "paths": {
    "/api/users": {
      "get": {
        "summary": "Users",
        "operationId": "listUsers",
        "tags": ["users"],
        "responses": {
          "200": {
            "description": "Users",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "maxItems": 1000,
                  "items": { "$ref": "#/components/schemas/User" }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "session"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "display_name": { "type": "string" }
        },
        "required": ["id", "display_name"]
      }
    }
  }
}
