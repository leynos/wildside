{
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@mermaid-js/mermaid-cli": "^11.10.1",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "markdownlint-cli": "^0.45.0",
    "prettier-plugin-sort-json": "^3.0.0",
    "vite": "^7.1.4"
  },
  "name": "myapp",
  "prettier": {
    "overrides": [
      {
        "files": [
          "**/*.json"
        ],
        "options": {
          "jsonRecursiveSort": true
        }
      }
    ],
    "plugins": [
      "prettier-plugin-sort-json"
    ]
  },
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend-pwa",
    "packages/*"
  ],
  "packageManager": "pnpm@10.15.1",
  "scripts": {
    "build": "pnpm -r run build",
    "audit": "node security/validate-audit.js"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "pnpm": {
    "overrides": {
      "tar-fs": "2.1.3",
      "ws": "8.18.3"
    }
  }
}
